@model List<WebApplication3.Models.User>

@{
    ViewData["Title"] = "Add Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include necessary meta tags and stylesheets -->
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="header my-2">Add New Admin</div>
            <form method="post" action="/Home/AddAdmin">
                <div class="form-group">
                    <input type="text" class="form-control my-2" name="username" placeholder="Admin Username" required />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control my-2" name="password" placeholder="Admin Password" required />
                </div>
                <button type="submit" class="btn btn-primary">Add Admin</button>
            </form>
        </div>

        <div class="data-grid">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Admin Username</th>
                        <th>Password</th>
                        <th>Update Admin</th>
                        <th>Delete Admin</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Password</td>
                            <td>
                                <a asp-controller="Home" asp-action="UpdateAdmin" asp-route-id="@user.Id" class="btn btn-warning">Update</a>
                                
                            </td>
                            <td>
                                <form asp-controller="Home" asp-action="DeleteAdmin" asp-route-id="@user.Id" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this admin?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
