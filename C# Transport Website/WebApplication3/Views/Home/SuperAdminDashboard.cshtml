@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Admin Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
           
            font-family: Arial, sans-serif;
        }

        .header {
            background-color: #333; /* Darker header background */
            color: #fff;
            padding: 20px;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 30px; /* Add space below the header */
        }

        .button-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px; /* Add space between button containers */
        }

        .dashboard-button {
            width: 220px; /* Increased button width */
            height: 80px; /* Increased button height */
            font-size: 20px; /* Increased font size */
            border-radius: 10px; /* Rounded corners for buttons */
            transition: transform 0.3s ease, opacity 0.3s ease; /* Smooth transition on hover */
            margin: 10px; /* Add space between buttons */
        }

            .dashboard-button:hover {
                transform: scale(1.1); /* Increase button size on hover */
                opacity: 0.9; /* Reduce opacity on hover for visual feedback */
            }

        .btn-add-admin {
            background-color: #4CAF50; /* Green color for adding admins */
            color: #fff;
            border: none;
        }

        .btn-add-guard {
            background-color: #2196F3; /* Blue color for adding guards */
            color: #fff;
            border: none;
        }

        .btn-add-driver {
            background-color: #FFC107; /* Yellow color for adding drivers */
            color: #fff;
            border: none;
        }

        .btn-generate-report {
            background-color: #FF5722; /* Orange color for generating reports */
            color: #fff;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header text-center">
            Super Admin Dashboard
        </div>
        <div class="button-container">
            <a asp-controller="Home" asp-action="AddAdmin" class="btn dashboard-button btn-add-admin">Add Admin</a>
            <a asp-controller="Home" asp-action="AddGuard" class="btn dashboard-button btn-add-guard">Add Guard</a>
        </div>
        <div class="button-container">
            <a asp-controller="Driver" asp-action="AddDriver" class="btn dashboard-button btn-add-driver">Add Driver</a>
            <a asp-controller="Report" asp-action="GenerateReport" class="btn dashboard-button btn-generate-report">Generate Report</a>
        </div>
    </div>
</body>
</html>
